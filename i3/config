set $mod Mod4
set $alt Mod1

# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below.
font pango:monospace 0

# Before i3 v4.8, we used to recommend this one as the default:
# font -misc-fixed-medium-r-normal--13-120-75-75-C-70-iso10646-1
# The font above is very space-efficient, that is, it looks good, sharp and
# clear in small sizes. However, its unicode glyph coverage is limited, the old
# X core fonts rendering does not support right-to-left and this being a bitmap
# font, it doesn’t scale on retina/hidpi displays.

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

focus_follows_mouse no
mouse_warping none

# xrandr --listmonitors
# xrandr -q
set $laptopOutput eDP
set $primaryMonitorOutput DisplayPort-0
set $secondaryMonitorOutput HDMI-A-0

# MONITOR MANAGEMENT
bindsym Shift+$mod+s exec "xrandr --output $laptopOutput --auto --output $primaryMonitorOutput --off --output $secondaryMonitorOutput --off"; mode "default"; restart
bindsym Shift+$mod+m exec "xrandr --output $laptopOutput --auto --output $primaryMonitorOutput --same-as $laptopOutput --auto --output $secondaryMonitorOutput --same-as $laptopOutput --auto"; mode "default"; restart
bindsym Shift+$mod+o exec "xrandr --output $laptopOutput --off --output $primaryMonitorOutput --auto --output $secondaryMonitorOutput --off"; mode "default"; restart

bindsym Shift+$mod+a exec "xrandr --output $primaryMonitorOutput --left-of $laptopOutput --auto"; mode "default"; restart
bindsym Shift+$mod+d exec "xrandr --output $primaryMonitorOutput --right-of $laptopOutput --auto"; mode "default"; restart

bindsym Shift+$mod+w exec "xrandr --output $primaryMonitorOutput --above $laptopOutput --auto --output $secondaryMonitorOutput --off"; mode "default"
bindsym Shift+$mod+e exec "xrandr --output $primaryMonitorOutput --above $laptopOutput --auto --output $secondaryMonitorOutput --right-of $primaryMonitorOutput --auto"; mode "default"
bindsym Shift+$mod+q exec "xrandr --output $primaryMonitorOutput --above $laptopOutput --auto --output $secondaryMonitorOutput --left-of $primaryMonitorOutput --auto"; mode "default"

bindsym Shift+Control+$mod+f exec "xrandr --output $secondaryMonitorOutput --rotate left"; mode "default"
bindsym Shift+$mod+f exec "xrandr --output $secondaryMonitorOutput --rotate normal"; mode "default"

# lock screen (and pause player; unpause on unlock?)
bindsym Shift+Control+$alt+l exec "$HOME/.config/i3/catMode.sh off; playerctl -p spotify pause; i3lock -n -e -i $HOME/.config/i3/images/lockscreen.png"
# lock screen (and pause player; and set only laptop as output)
bindsym Shift+Control+$mod+l exec "$HOME/.config/i3/catMode.sh off; playerctl -p spotify pause; xrandr --output $laptopOutput --auto --output $primaryMonitorOutput --off --output $secondaryMonitorOutput --off; i3-msg restart; i3lock -n -e -i $HOME/.config/i3/images/lockscreen.png"

# start a terminal
bindsym $mod+Return exec i3-sensible-terminal

# kill focused window
bindsym $mod+Shift+x kill

# start rofi (a program launcher)
bindsym $mod+d exec "rofi -combi-modi window,drun,run -show combi -modi combi"
bindsym $mod+c exec "rofi -modi 'clipboard:greenclip print' -show clipboard -run-command '{cmd}' -theme onedark-theme"

# change focus
bindsym $mod+h focus left
