# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym h resize shrink width 10 px or 10 ppt
        bindsym j resize grow height 10 px or 10 ppt
        bindsym k resize shrink height 10 px or 10 ppt
        bindsym l resize grow width 10 px or 10 ppt

        bindsym Control+h resize shrink width 5 px or 5 ppt
        bindsym Control+j resize grow height 5 px or 5 ppt
        bindsym Control+k resize shrink height 5 px or 5 ppt
        bindsym Control+l resize grow width 5 px or 5 ppt

        bindsym Control+Shift+h resize shrink width 1 px or 1 ppt
        bindsym Control+Shift+j resize grow height 1 px or 1 ppt
        bindsym Control+Shift+k resize shrink height 1 px or 1 ppt
        bindsym Control+Shift+l resize grow width 1 px or 1 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}
bindsym $mod+r mode "resize"

mode "cat" {
        bindsym t exec --no-startup-id "$HOME/.config/i3/catMode.sh toggle"
        bindsym 1 exec --no-startup-id "$HOME/.config/i3/catMode.sh"
        bindsym 0 exec --no-startup-id "$HOME/.config/i3/catMode.sh off"

        bindsym Return mode "default"
        bindsym Escape mode "default"
}
bindsym $mod+Shift+t mode "cat"

# Pulse Audio controls
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume $(pactl get-default-sink) +5% #increase sound volume
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume $(pactl get-default-sink) -5% #decrease sound volume
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute $(pactl get-default-sink) toggle # toggle sound
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute $(pactl get-default-source) toggle # toggle mic

# player controls (required playerctl)
bindcode $mod+117 exec playerctl -p spotify play-pause
bindsym $mod+Control+Left exec playerctl -p spotify previous
bindsym $mod+Control+Right exec playerctl -p spotify next

# brightness control
bindsym XF86MonBrightnessUp exec --no-startup-id "light -A 10"
bindsym XF86MonBrightnessDown exec --no-startup-id "light -U 10"
bindsym $mod+F6 exec --no-startup-id "light -A 5"
bindsym $mod+F5 exec --no-startup-id "light -U 5"

bindsym $mod+Shift+p exec "if test -f ~/.presentationMode; then notify-send 'EXITING presentation mode' -t 500 && rm ~/.presentationMode && i3-msg '[class=Slack] move container to workspace 2'; else notify-send 'ENTERING presentation mode' -t 500 && echo 1 > ~/.presentationMode && i3-msg '[class=Slack] move container to workspace 1' && i3-msg 'workspace 8; workspace 1'; fi"

